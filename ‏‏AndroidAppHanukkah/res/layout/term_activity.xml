<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical" android:weightSum="1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:weightSum="1">
            <es.pymasde.blueterm.EmulatorView android:id="@+id/emulatorView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fillViewport="false"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="תערוכת חנוכיות"
                android:id="@+id/textView1" android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="כיתה א בית ספר ברקאי"
                android:id="@+id/textView2" android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:weightSum="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_weight="0.06" android:weightSum="1"
                      android:gravity="center" android:layout_gravity="center_horizontal">
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="9" android:id="@+id/b9"
                    android:onClick="b9" android:textSize="30px" android:layout_weight="0.06"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_weight="0.06" android:weightSum="1"
                      android:gravity="center" android:layout_gravity="center_horizontal">
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="1" android:onClick="b1" android:id="@+id/b1"
                    android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="2" android:id="@+id/b2"
                    android:onClick="b2" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="3" android:id="@+id/b3"
                    android:onClick="b3" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="4" android:id="@+id/b4"
                    android:onClick="b4" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="5" android:id="@+id/b5"
                    android:onClick="b5" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="6" android:id="@+id/b6"
                    android:onClick="b6" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="7" android:id="@+id/b7"
                    android:onClick="b7" android:textSize="30px" android:layout_weight="0.10"/>
            <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="8" android:id="@+id/b8"
                    android:onClick="b8" android:textSize="30px" android:layout_weight="0.10"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:gravity="center" android:weightSum="1">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הדלק הכל"
                    android:id="@+id/onAll"
                    android:onClick="onAll" android:textSize="30px" android:layout_weight="0.30"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="כבה הכל"
                    android:id="@+id/offAll"
                    android:onClick="offAll" android:textSize="30px" android:layout_weight="0.30"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
